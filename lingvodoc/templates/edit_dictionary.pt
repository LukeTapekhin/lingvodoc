<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">

    <title>Lingvodoc future</title>
    <link rel="stylesheet" type="text/css" href="${request.static_url('lingvodoc:static/css/lingvodoc.css')}"/>
    <script src="${request.static_url('lingvodoc:static/js/edit-dictionary.js')}"></script>

</head>

<body ng-app="EditDictionaryModule">

<div id="clientId" data-lingvodoc="${client_id}"></div>
<div id="userId" data-lingvodoc="${user.id}"></div>

<div id="dictionaryClientId" data-lingvodoc="${dictionary_client_id}"></div>
<div id="dictionaryObjectId" data-lingvodoc="${dictionary_object_id}"></div>
<div id="perspectiveClientId" data-lingvodoc="${perspective_client_id}"></div>
<div id="perspectiveId" data-lingvodoc="${perspective_id}"></div>


<div id="allLexicalEntriesUrl"
     data-lingvodoc="${request.route_url('lexical_entries_all', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>
<div id="allLexicalEntriesCountUrl"
     data-lingvodoc="${request.route_url('lexical_entries_all_count', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>
<div id="getPerspectiveFieldsUrl"
     data-lingvodoc="${request.route_url('perspective_fields', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>
<div id="createLexicalEntryUrl"
     data-lingvodoc="${request.route_url('create_lexical_entry', dictionary_client_id=dictionary_client_id, dictionary_object_id=dictionary_object_id, perspective_client_id=perspective_client_id, perspective_id=perspective_id)}"></div>

<div metal:use-macro="load: nav.pt"></div>

<br>

<div class="container-fluid" style="padding-top: 20px" ng-controller="EditDictionaryController" ng-cloak>

    <br>

    <div class="row" style="margin: 30px 0">
        <div class="col-sm-10">
            <wavesurfer url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
        </div>

        <div class="col-sm-2">
            <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block"
                    ng-click="playPause()">
                <span id="play" ng-show="paused">
                    <i class="glyphicon glyphicon-play"></i>
                    Play
                </span>

                <span id="pause" ng-show="!paused">
                    <i class="glyphicon glyphicon-pause"></i>
                    Pause
                </span>
            </button>
        </div>
    </div>


    <div class="row">
        <div class="col-md-1">
            <button type="button" class="btn btn-default" ng-click="addNewLexicalEntry()">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div>


    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <td ng-repeat="field in fields">{{ field.entity_type }}</td>
                <td> <!-- action --> </td>
            </tr>
            </thead>

            <tbody>

            <tr ng-repeat="entryFields in dictionaryTable">

                <td ng-repeat="fieldValues in entryFields"
                    ng-init="lexicalEntry=lexicalEntries[$parent.$index]; field=fields[$index]">


                    <div ng-if="field.data_type == 'text'">
                        <ul class="entries_list">
                            <li ng-repeat="fieldValue in fieldValues"
                                ng-class="{removed: fieldValue.marked_for_deletion}">
                                {{ fieldValue.content }}
                            <span ng-if="addedByUser(lexicalEntry) && !fieldValue.marked_for_deletion">
                                    <button type="button" class="btn btn-default btn-xs"
                                            ng-click="removeValue(lexicalEntry, field, fieldValue)">
                                        <span class="glyphicon glyphicon-remove-sign"></span>
                                    </button>
                            </span>
                            </li>
                        </ul>


                        <button type="button" class="btn btn-default btn-sm"
                                ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>

                        <br>

                        <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                            <input type="text" value="" placeholder=""
                                   ng-blur="saveTextValue(lexicalEntry, field, $event)">
                        </div>

                    </div>


                    <div ng-if="field.data_type == 'image'">
                        <ul class="entries_list">
                            <li ng-repeat="fieldValue in fieldValues" ng-if="!fieldValue.marked_for_deletion">

                                <a ng-href="fieldValue.content" target="_blank"><span class="glyphicon glyphicon-list">View image</span></a>

                            <span ng-if="addedByUser(lexicalEntry) && !fieldValue.marked_for_deletion">
                                    <button type="button" class="btn btn-default btn-xs"
                                            ng-click="removeValue(lexicalEntry, field, fieldValue)">
                                        <span class="glyphicon glyphicon-remove-sign"></span>
                                    </button>
                            </span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-default btn-sm"
                                ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>

                        <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="btn btn-default btn-file">
                            Upload <input type="file"
                                          on-read-file="saveImageValue(lexicalEntry, field, $fileName, $fileType, $fileContent)">
                        </span>
                        </div>

                    </div>

                    <div ng-if="field.data_type == 'sound'">
                        <ul class="entries_list">
                            <li ng-repeat="fieldValue in fieldValues" ng-if="!fieldValue.marked_for_deletion">

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="play(fieldValue.content)">
                                    <span class="glyphicon glyphicon-play">Play sound</span>
                                </button>

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-if="fieldValue.contains && fieldValue.contains.length > 0"
                                        ng-click="annotate(fieldValue, fieldValue.contains[0])">
                                    <span class="glyphicon glyphicon-list">View markup</span>
                                </button>

                            <span ng-repeat="markupField in field.contains">

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, markupField.entity_type)">
                                    <span class="glyphicon glyphicon-open-file">Upload markup</span>
                                </button>

                                <span ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, markupField.entity_type)">
                                    <span class="btn btn-default btn-file">
                                        Upload markup <input type="file"
                                                             on-read-file="saveMarkupValue(lexicalEntry, markupField, $fileName, $fileType, $fileContent, fieldValue)">
                                    </span>
                                </span>
                            </span>

                            <span ng-if="addedByUser(lexicalEntry) && !fieldValue.marked_for_deletion">
                                    <button type="button" class="btn btn-default btn-xs"
                                            ng-click="removeValue(lexicalEntry, field, fieldValue)">
                                        <span class="glyphicon glyphicon-remove-sign"></span>
                                    </button>
                            </span>

                            </li>
                        </ul>


                        <button type="button" class="btn btn-default btn-sm"
                                ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>

                        <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.object_id, field.entity_type)">
                        <span class="btn btn-default btn-file">
                            Upload <input type="file"
                                          on-read-file="saveSoundValue(lexicalEntry, field, $fileName, $fileType, $fileContent)">
                        </span>
                        </div>

                    </div>

                    <div ng-if="field.isGroup">
                        <div ng-if="field.isGroup">

                            <button type="button" class="btn btn-default btn-sm"
                                    ng-click="editGroup(lexicalEntry, field, fieldValues)">
                                <span class="glyphicon glyphicon-list">Edit</span>
                            </button>

                        </div>

                    </div>

                    <div ng-if="field.data_type == 'grouping_tag'">

                        <button type="button" class="btn btn-default btn-sm"
                                ng-click="editGroupingTag(lexicalEntry, field, fieldValues)">
                            <span class="glyphicon glyphicon-list">Edit</span>
                        </button>

                    </div>


                </td>

                <td> <!-- action --> </td>

            </tr>

            </tbody>

        </table>


        <div class="text-center">

            <nav>
                <ul class="pagination pagination-sm">
                    <li ng-repeat="pageNumber in range(1, pageCount)" ng-class="{active: pageNumber == pageIndex}">
                        <a href="#" ng-click="getPage(pageNumber)">{{ pageNumber }}</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</div>


<script type="text/ng-template" id="annotationModal.html">

    <div class="modal-header">
        <h3 class="modal-title">ELAN</h3>
    </div>

    <div class="modal-body" ng-cloak>

        <div class="row" style="margin: 30px 0">
            <div class="col-sm-10">
                <wavesurfer id url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
            </div>

            <div class="col-sm-2">
                <button class="btn btn-success btn-block"
                        ng-click="playPause()">
                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 ">
                <table class="table table-striped table-bordered" ng-repeat="tier in annotation.tiers">
                    <thead>

                    <tr>
                        <td colspan="4">
                            <h3>{{ tier.linguisticTypeRef }}</h3>
                        </td>
                    </tr>

                    <tr>
                        <td>id</td>
                        <td>Начало</td>
                        <td>Конец</td>
                        <td>Значение</td>
                        <td></td>
                    </tr>

                    </thead>

                    <tr ng-repeat="a in tier.annotations">
                        <td>{{ a.id }}</td>
                        <td>{{ annotation.timeSlotRefToSeconds(a.timeslotRef1) }}</td>
                        <td>{{ annotation.timeSlotRefToSeconds(a.timeslotRef2) }}</td>
                        <td>{{ a.value }}</td>
                        <td>
                            <button type="button" class="btn btn-default" ng-click="playAnnotation(a)">
                                <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </td>
                    </tr>

                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</script>


<script type="text/ng-template" id="editGroupModal.html">

    <div class="modal-header">
        <h3 class="modal-title">{{ title }}</h3>
    </div>

    <div class="modal-body">

        <div class="row" style="margin: 30px 0">
            <div class="col-sm-10">
                <wavesurfer id url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
            </div>

            <div class="col-sm-2">
                <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block"
                        ng-click="playPause()">
                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1">
                <button type="button" class="btn btn-default" ng-click="addNewEntry()">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 ">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td ng-repeat="field in fields">{{ field.entity_type }}</td>
                        <td> <!-- action --> </td>
                    </tr>
                    </thead>

                    <tbody>


                    <tr ng-repeat="entryFields in fieldsValues">

                        <td ng-repeat="fieldValues in entryFields"
                            ng-init="lexicalEntry=entries[$parent.$index]; field=fieldsIdx[$index]">

                            <div ng-if="field.data_type == 'text'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in fieldValues" ng-class="{removed: fieldValue.marked_for_deletion}">
                                        {{ fieldValue.content }}
                            <span ng-if="addedByUser(lexicalEntry) && !fieldValue.marked_for_deletion">
                                    <button type="button" class="btn btn-default btn-xs"
                                            ng-click="removeValue(lexicalEntry, field, fieldValue)">
                                        <span class="glyphicon glyphicon-remove-sign"></span>
                                    </button>
                            </span>
                                    </li>
                                </ul>


                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.row_id, field.entity_type)">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>

                                <br>

                                <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.row_id, field.entity_type)">
                                    <input type="text" value="" placeholder=""
                                           ng-blur="saveTextValue(lexicalEntry, field, $event)">
                                </div>

                            </div>


                            <div ng-if="field.data_type == 'image'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in fieldValues" ng-if="!fieldValue.marked_for_deletion">
                                        <a ng-href="fieldValue.content" target="_blank"><span class="glyphicon glyphicon-list">View markup</span></a>
                                    </li>
                                </ul>

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.row_id, field.entity_type)">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>

                                <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.row_id, field.entity_type)">
                        <span class="btn btn-default btn-file">
                            Upload <input type="file"
                                          on-read-file="saveImageValue(lexicalEntry, field, $fileName, $fileType, $fileContent)">
                        </span>
                                </div>

                            </div>

                            <div ng-if="field.data_type == 'sound'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in fieldValues" ng-if="!fieldValue.marked_for_deletion">

                                        <button type="button" class="btn btn-default btn-sm"
                                                ng-click="play(fieldValue.content)">
                                            <span class="glyphicon glyphicon-play">Play sound</span>
                                        </button>

                                        <button type="button" class="btn btn-default btn-sm"
                                                ng-if="fieldValue.contains && fieldValue.contains.length > 0"
                                                ng-click="annotate(fieldValue, fieldValue.contains[0])">
                                            <span class="glyphicon glyphicon-list">View markup</span>
                                        </button>

                            <span ng-repeat="markupField in field.contains">

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.row_id, markupField.entity_type)">
                                    <span class="glyphicon glyphicon-open-file">Upload markup</span>
                                </button>

                                <span ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.row_id, markupField.entity_type)">
                                    <span class="btn btn-default btn-file">
                                        Upload markup <input type="file"
                                                             on-read-file="saveMarkupValue(lexicalEntry, markupField, $fileName, $fileType, $fileContent, fieldValue)">
                                    </span>
                                </span>
                            </span>
                                    </li>
                                </ul>


                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="enableInput(lexicalEntry.client_id, lexicalEntry.row_id, field.entity_type)">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>

                                <div ng-if="isInputEnabled(lexicalEntry.client_id, lexicalEntry.row_id, field.entity_type)">
                        <span class="btn btn-default btn-file">
                            Upload <input type="file"
                                          on-read-file="saveSoundValue(lexicalEntry, field, $fileName, $fileType, $fileContent)">
                        </span>
                                </div>

                            </div>

                        </td>

                        <td> <!-- action --> </td>

                    </tr>

                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
    </div>


</script>

<script type="text/ng-template" id="editGroupingTagModal.html">

    <div class="modal-header">
        <h3 class="modal-title">{{ title }}</h3>
    </div>

    <div class="modal-body">

        <div class="row" style="margin: 30px 0">
            <div class="col-sm-10">
                <wavesurfer id url="" wave-color="#337ab7" progress-color="#23527c" height="128"></wavesurfer>
            </div>

            <div class="col-sm-2">
                <button ng-class="{disabled: !isMediaFileAvailable()}" class="btn btn-success btn-block"
                        ng-click="playPause()">
                    <span id="play" ng-show="paused">
                        <i class="glyphicon glyphicon-play"></i>
                        Play
                    </span>

                    <span id="pause" ng-show="!paused">
                        <i class="glyphicon glyphicon-pause"></i>
                        Pause
                    </span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 ">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td></td>
                        <td ng-repeat="field in fields" ng-if="field.data_type!='grouping_tag' && !field.isGroup">
                            {{ field.entity_type }}
                        </td>
                    </tr>
                    </thead>

                    <tbody>

                    <tr ng-repeat="entry in fieldsValues">

                        <td>
                            <button type="button" class="btn btn-default" ng-click="unlinkEntry($index)">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </td>
                        
                        <td ng-repeat="field in fieldsValues[$index]"
                            ng-if="fieldsIdx[$index].data_type!='grouping_tag' && !fieldsIdx[$index].isGroup">

                            <div ng-if="fieldsIdx[$index].data_type == 'text'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in field">
                                        {{ fieldValue.content }}
                                    </li>
                                </ul>

                            </div>


                            <div ng-if="fieldsIdx[$index].data_type == 'image'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in field">
                                        {{ fieldValue.content }}
                                    </li>
                                </ul>

                            </div>

                            <div ng-if="fieldsIdx[$index].data_type == 'sound'">

                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in field">
                                        <button type="button" class="btn btn-default btn-sm"
                                                ng-click="play(fieldValue.content)">
                                            <span class="glyphicon glyphicon-play">Play</span>
                                        </button>
                                    </li>
                                </ul>

                            </div>

                            <div ng-if="fieldsIdx[$index].isGroup">

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="addGroup(entry.client_id, entry.object_id, fieldsIdx[$index])">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>

                            </div>


                            <div ng-if="fieldsIdx[$index].data_type == 'grouping_tag'">

                                <button type="button" class="btn btn-default btn-sm"
                                        ng-click="addGroup(entry.client_id, entry.object_id, fieldsIdx[$index])">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>

                            </div>

                        </td>

                    </tr>

                    </tbody>

                </table>

                <hr>
                <h2>Add connected words</h2>

                <input type="text" class="form-control" ng-model="searchQuery">

                <hr>

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td></td>
                        <td ng-repeat="field in fields" ng-if="field.data_type!='grouping_tag' && !field.isGroup">{{
                            field.entity_type }}
                        </td>
                    </tr>
                    </thead>

                    <tbody>

                    <tr ng-repeat="entry in suggestedFieldsValues">

                        <td>
                            <button type="button" class="btn btn-default" ng-click="linkEntries(suggestedEntries[$index])">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </td>

                        <td ng-repeat="field in suggestedFieldsValues[$index]"
                            ng-if="fieldsIdx[$index].data_type!='grouping_tag' && !fieldsIdx[$index].isGroup">

                            <div ng-if="fieldsIdx[$index].data_type == 'text'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in field">
                                        {{ fieldValue.content }}
                                    </li>
                                </ul>

                            </div>


                            <div ng-if="fieldsIdx[$index].data_type == 'image'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in field">
                                        {{ fieldValue.content }}
                                    </li>
                                </ul>

                            </div>

                            <div ng-if="fieldsIdx[$index].data_type == 'sound'">
                                <ul class="entries_list">
                                    <li ng-repeat="fieldValue in field">
                                        <button type="button" class="btn btn-default btn-sm"
                                                ng-click="play(fieldValue.content)">
                                            <span class="glyphicon glyphicon-play">Play</span>
                                        </button>
                                    </li>
                                </ul>

                            </div>

                        </td>

                    </tr>

                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
    </div>


</script>


</body>
</html>
